{% extends "_layout.twig" %}
    
{% block content %}
<section class="homepage">
    {% if entry.melding %}
        <div class="homepage__notification">
            <div class="homepage__notification--wrapper">
                <p>{{entry.melding}}</p>
                <span id="closeMarker">&#10006;<span>
            </div>
        </div>
    {% endif %}

    <div class="homepage__hero">
        {% include "_snippets/_hero.twig" %}
        <div>
            {{svg('@webroot/assets/Visual-graphic_2022-06-10-163019_jelw.svg')}}
        </div>
    </div>

    <div class="homepage__category">
        {% set cards = craft.entries.section("homepageCategories").all() %}
        {% for card in cards %}
            {% include "_snippets/_card.twig" with {
                correctLink: card.slug|split("-")
            } %}
        {% endfor %}
    </div>

    <div class="homepage__sponsors__title">
        <h3>Onze trouwe sponsors</h3>
    </div>

    <div class="homepage__sponsors">
        {% set sponsors = craft.entries.section("sponsors").all() %}
        {% for sponsor in sponsors %}
            {% include "_snippets/_sponsors.twig" %}
        {% endfor %}
    </div>
</section>
    
{% endblock %}
